---
// Assets

import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
// Content
const { url, title, description, pubDate } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<article
  class="relative flex flex-col justify-between h-full p-6 bg-base-50 min-h-100 group transition-all duration-300 hover:bg-accent-500 accent-500"
>
  <a
    href={url}
    title={`Read more: ${title}`}
    aria-label={`Read blog post: ${title}`}
    class="absolute inset-0 z-10"></a>

  <Text
    tag="p"
    variant="textXS"
    class="uppercase text-base-500 group-hover:text-white/80"
  >
   <time datetime={pubDate}> {pubDate}</time>
  </Text>
  <div class="flex flex-col">
    <Text
      tag="h3"
      variant="textSM"
      class="font-medium text-base-900 text-balance group-hover:text-white"
    >
      {title}
    </Text>
    <Text
      tag="p"
      variant="textSM"
      class="mt-2 text-base-500 line-clamp-2 text-balance group-hover:text-white/80"
    >
      {description}
    </Text>
  </div>
</article>
