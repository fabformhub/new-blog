---
// Assets
import { Image } from "astro:assets";
import Cross from "@/components/assets/Cross.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import User from "@/components/fundations/icons/User.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <!-- Hero -->
  <section>
    <Wrapper variant="standard" class="pt-48 pb-24">
      <div
        class="grid gap-4 lg:gap-8 grid-cols-1 lg:grid-cols-3 lg:items-start"
      >
        <div class="text-balance lg:col-span-2">
          <div>
            <Text
              tag="h1"
              variant="displaySM"
              class="font-medium text-base-900"
            >
              {frontmatter.name}
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              {frontmatter.occupation} — {frontmatter.location}
            </Text>
          </div>
          <div
            class="flex flex-col justify-end p-4 mt-4 pt-40 bg-base-50 max-h-100 gap-24 group"
          >
           
            <Text tag="p" variant="textLG" class=" text-accent-600 font-medium tracking-tight font-display">
              “{frontmatter.testimonial}”
            </Text>
          </div>
          <Wrapper variant="prose" class="mt-4">
            <slot />
          </Wrapper>
        </div>
        <div class="w-ful lg:sticky lg:top-24">
          <div class="flex flex-col p-4 bg-base-50 gap-24">
            <Image
              width={500}
              height={500}
              src={frontmatter.avatar.url}
              alt={frontmatter.avatar.alt}
              class="object-cover object-center size-24"
            />
            <div>
              <Text tag="p" variant="textSM" class="font-medium text-base-900">
                {
                  frontmatter.course
                    .replace(/-/g, " ")
                    .replace(/\b\w/g, (c) => c.toUpperCase())
                }
              </Text>
              <Text
                tag="blockquote"
                variant="textSM"
                class="mt-2 text-base-500"
              >
                “{frontmatter.quote}”
              </Text>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
